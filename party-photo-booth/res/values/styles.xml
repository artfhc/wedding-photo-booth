<?xml version="1.0" encoding="UTF-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Text">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="Text.Dark">
        <item name="android:textColor">@color/text_dark</item>
    </style>

    <style name="Text.Light">
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="Text.Dark.Heavy">
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Light.Heavy">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SmallText">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="SmallText.Light">
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="TitleText">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/background_color</item>
    </style>

    <style name="ThemeSelector" parent="android:Theme.Light" />

    <style name="ThemeSelectorFullscreen" parent="android:Theme.Light.NoTitleBar.Fullscreen" />

</resources>